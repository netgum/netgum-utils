{
  "name": "@netgum/utils",
  "private": true,
  "version": "0.0.0",
  "description": "NetGum utilities",
  "author": {
    "name": "Stanislaw Glogowski",
    "email": "hello@newobject.pl"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/netgum/utils.git"
  },
  "bugs": {
    "url": "https://github.com/netgum/utils/issues"
  },
  "scripts": {
    "ts:lint": "tslint --project tsconfig.json src/**/*.ts",
    "ts:compile": "tsc",
    "prebuild": "npm run ts:lint && rimraf ./dist/*",
    "build": "npm run ts:compile",
    "postbuild": "tempack ./dist/",
    "pretest": "npm run ts:lint",
    "test": "jest",
    "test:watch": "jest --watch --verbose false"
  },
  "dependencies": {
    "bn.js": "^4.11.8",
    "idna-uts46-hx": "^2.3.1",
    "keccak": "^1.4.0",
    "secp256k1": "^3.5.2",
    "unorm": "^1.4.1"
  },
  "devDependencies": {
    "@netgum/types": "0.0.4",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "tempack": "^1.1.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.5.2",
    "typescript": "^3.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
