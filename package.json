{
  "name": "@netgum/utils",
  "private": true,
  "version": "0.0.0",
  "description": "NetGum utilities",
  "author": {
    "name": "Stanislaw Glogowski",
    "email": "hello@newobject.pl"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/netgum/utils.git"
  },
  "bugs": {
    "url": "https://github.com/netgum/utils/issues"
  },
  "scripts": {
    "lint": "tslint --project ./tsconfig.json ./src/**/*.ts",
    "compile": "tsc --project ./tsconfig.build.json --rootDir ./src",
    "prebuild": "npm run lint && rimraf ./dist/*",
    "build": "npm run compile",
    "postbuild": "tempack ./dist/",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch --verbose false"
  },
  "dependencies": {
    "bn.js": "^4.11.8",
    "idna-uts46-hx": "^3.0.0",
    "keccak": "^2.0.0",
    "secp256k1": "^3.6.2",
    "unorm": "^1.5.0"
  },
  "devDependencies": {
    "@netgum/types": "^0.1.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "jest": "^24.7.1",
    "rimraf": "^2.6.3",
    "tempack": "^1.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.10.0",
    "typescript": "^3.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
