{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@netgum/types/bn.js",
      "node_modules/@netgum/types/idna-uts46-hx",
      "node_modules/@netgum/types/keccak",
      "node_modules/@netgum/types/secp256k1"
    ],
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "dist/**/*"
  ]
}