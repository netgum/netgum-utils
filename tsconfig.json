{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2016",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@netgum/types/node"
    ],
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
